<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdateActivity"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Редактирай книга"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etTitleUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заглавие"
            android:minHeight="48dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:autoHandwritingEnabled="false"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etAuthorUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Автор"
            android:minHeight="48dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:autoHandwritingEnabled="false"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etPagesUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Страници"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:autoHandwritingEnabled="false"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etRatingUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Рейтинг (1-5)"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:autoHandwritingEnabled="false"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etReviewUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ревю"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:autoHandwritingEnabled="false"
            android:fontFamily="sans-serif"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Назад"
                android:fontFamily="sans-serif"
                android:backgroundTint="#757575"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Обнови"
                android:backgroundTint="@color/btn_share_light"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Сподели ревюто"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/btn_action_medium"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Изтрий книгата"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/btn_delete_dark"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>