<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdateActivity"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Редактирай книга"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etTitleUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заглавие на книгата"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etAuthorUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Автор"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etPagesUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Брой страници"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etRatingUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Рейтинг (1-5)"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etReviewUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Твоето мнение за книгата..."
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Обнови информацията"
            android:backgroundTint="@color/btn_update_light"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Сподели ревю"
            android:backgroundTint="@color/btn_share_darker"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Назад"
                android:backgroundTint="@color/btn_back_gray"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Изтрий"
                android:backgroundTint="@color/btn_delete_dark"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>