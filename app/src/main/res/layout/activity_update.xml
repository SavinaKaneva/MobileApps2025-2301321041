<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdateActivity"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Book Information"
            android:textSize="48sp"
            android:fontFamily="@font/dancing_script_medium"
            android:textColor="@color/journal_primary"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etTitleUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etAuthorUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etPagesUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Page Number"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etRatingUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rating (1-5)"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etReviewUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thoughts..."
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:textColorHint="#606060"
            android:fontFamily="sans-serif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change colour:"
            android:layout_marginBottom="8dp"
            android:textColor="#5D4037"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/colorDefault"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#BDBDBD"
                android:layout_margin="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/colorRed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#FFCDD2"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#BDBDBD"
                android:layout_margin="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/colorGreen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#C8E6C9"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#BDBDBD"
                android:layout_margin="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/colorBlue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#BBDEFB"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#BDBDBD"
                android:layout_margin="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/colorPurple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#E1BEE7"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#BDBDBD"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Update"
            android:backgroundTint="@color/btn_update_light"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Share..."
            android:backgroundTint="@color/btn_share_darker"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:backgroundTint="@color/btn_back_gray"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Delete"
                android:backgroundTint="@color/btn_delete_dark"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>